# Ray's custom Ghostty configuration.
# Version: v0.0.2
# Last Updated: 2025-8-11

# Terminal Colors:
background = 000000
foreground = ffffff

# Theme (themes are built-into Ghostty):
theme = Grass

# Window splitting:
keybind = ctrl+w=new_split:up
keybind = ctrl+a=new_split:left
keybind = ctrl+s=new_split:down
keybind = ctrl+d=new_split:right

# Navigating Splits:
keybind = ctrl+shift+w=goto_split:up
keybind = ctrl+shift+a=goto_split:left
keybind = ctrl+shift+s=goto_split:down
keybind = ctrl+shift+d=goto_split:right
